<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".activities.ActivityRegistro">


    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="600dp"
        android:layout_margin="16dp"
        android:layout_weight="2"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nombre_layout"
            android:layout_width="550dp"
            android:layout_height="65dp"
            android:layout_marginTop="100dp">

            <EditText
                android:id="@+id/nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:background="@drawable/fondo_forms"
                android:hint="@string/txt_nombre" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_layout"
            android:layout_width="550dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/email_usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:background="@drawable/fondo_forms"
                android:hint="@string/txt_correo" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_layout"
            android:layout_width="550dp"
            android:layout_height="55dp"
            android:layout_marginTop="10px"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/password_usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:background="@drawable/fondo_forms"
                android:hint="@string/txt_contrasena"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/repetirPassword_layout"
            android:layout_width="550dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/repetirPassword_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:background="@drawable/fondo_forms"
                android:hint="@string/txt_contrasenaRepeat"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="667dp"
        android:layout_height="600dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="542dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:src="@drawable/img1" />

        <Button
            android:id="@+id/btn_registro"
            android:layout_width="279dp"
            android:layout_height="65dp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:text="@string/txt_registrarse" />

    </LinearLayout>


</LinearLayout>


